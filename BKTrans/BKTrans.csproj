<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <Platforms>x64;x86;AnyCPU</Platforms>
    <ApplicationIcon>BKTrans.ico</ApplicationIcon>
    <Version>0.1.0</Version>
    <Copyright>Copyright © 2021-2022 (GPLv3)</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="publish\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="resource\capture.png" />
    <None Remove="resource\hide.png" />
    <None Remove="resource\setting.png" />
    <None Remove="resource\trans.png" />
  </ItemGroup>

  <ItemGroup>
    <ApplicationDefinition Include="src/App.xaml"></ApplicationDefinition>
  </ItemGroup>

  <ItemGroup>
    <Content Include="BKTrans.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="resource\capture.png" />
    <Resource Include="resource\hide.png" />
    <Resource Include="resource\setting.png" />
    <Resource Include="resource\trans.png" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BKAssembly\BKAssembly.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Page Update="src\FloatTextWindow.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
    </Page>
  </ItemGroup>

</Project>